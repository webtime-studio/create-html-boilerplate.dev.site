{
  "extends": "@tsconfig/docusaurus/tsconfig.json",
  "include": ["src/"],
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "Node",
    "lib": ["dom", "es2019"],
    "allowJs": true,
    //    "checkJs": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "skipLibCheck": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  }
}
